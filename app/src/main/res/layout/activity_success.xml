<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgSucess"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/success_cart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleSuccess"
            style="@style/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="Yeay! Transaksimu Berhasil"
            android:textColor="@color/black_font"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/populer" />

        <TextView
            android:id="@+id/subSuccess"
            style="@style/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Kamu bisa melihat status pesananmu di halaman transaksi"
            android:textColor="@color/gray_font"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/populer" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Kembali ke home"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonKeranjang"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button_stroke"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Lihat keranjang"
            android:textColor="@color/black_font"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>